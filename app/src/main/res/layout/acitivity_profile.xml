<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ImageView
        android:id="@+id/imgDevOpsLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/devopslogo"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/txtTechStackname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GitLab"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_toEndOf="@+id/imgDevOpsLogo"/>

    <TextView
        android:id="@+id/txtDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTechStackname"
        android:layout_margin="20dp"
        android:layout_toRightOf="@+id/imgDevOpsLogo"
        android:text="Used for DevOps"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtCourseId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1020304"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/imgDevOpsLogo"
        android:layout_below="@+id/txtDetails"/>

</RelativeLayout>