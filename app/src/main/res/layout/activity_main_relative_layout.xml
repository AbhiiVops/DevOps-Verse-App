<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#18ffff">

    <TextView
        android:id="@+id/txtLayoutHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DevOps Verse"
        android:textSize="18sp"
        android:padding="10dp"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/txtLayoutSubHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Everything about DevOps"
        android:layout_centerInParent="true"
        android:textSize="18sp"
        android:padding="10dp"
        android:layout_below="@+id/txtLayoutHeader"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/imgDevOpsLogo"
        android:layout_width="150dp"
        android:layout_below="@id/txtLayoutSubHeader"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:layout_centerInParent="true"
        android:src="@drawable/devopslogo"/>

    <Button
        android:id="@+id/btnClickHere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Click Here"
        android:backgroundTint="#f50057"
        android:layout_alignParentBottom="true"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your name here"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textColorHint="#000000"
        android:layout_below="@+id/imgDevOpsLogo"
        android:inputType="text"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textColorHint="#000000"
        android:layout_below="@+id/etName"
        android:hint="Enter your password"
        android:inputType="textPassword"/>


</RelativeLayout>